<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvInput"
        android:textSize="30sp"/>
    <TextView
        android:layout_below="@+id/tvInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOutput"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvOutput"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnClearOne"
                    android:text="c"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnClearAll"
                    android:text="ac"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnOpenBracket"
                    android:text="("
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnCloseBracket"
                    android:text=")"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/btnSqrt"
                    android:text="sqrt"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/btnLog"
                    android:text="log"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:textAllCaps="false"
                    android:id="@+id/btnPower"
                    android:text="^"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnPlus"
                    android:text="+"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnOne"
                    android:text="1"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnTwo"
                    android:text="2"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnThree"
                    android:text="3"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnMinus"
                    android:text="-"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnFour"
                    android:text="4"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnFive"
                    android:text="5"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnSix"
                    android:text="6"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnMultiply"
                    android:text="*"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSeven"
                    android:text="7"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnEight"
                    android:text="8"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnNine"
                    android:text="9"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnDivide"
                    android:text="/"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnZero"
                    android:text="0"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnDot"
                    android:text="."
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnAns"
                    android:text="ans"
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnEqual"
                    android:text="="
                    android:textSize="30sp"
                    android:background="@drawable/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlue"
                android:text="Edited by: Quoc Tuan Nguyen"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"
                android:gravity="fill_vertical"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>